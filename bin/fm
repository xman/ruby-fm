#!/usr/bin/env ruby

require 'fm'


def usage
    <<EOS
fm #{FM::VERSION}

usage: fm <command> [args]

Available fm commands:
    index       Update index of the storage.
EOS
end


if ARGV.size == 0
    $stderr << usage
    exit
end

cmd = ARGV.shift
case cmd
when "index"
    FM.cmd_index(ARGV.clone)
else
    $stderr << "fm: '#{cmd}' is not a fm command.\n"
    exit
end
