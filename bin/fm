require 'fm'


def usage
    <<EOS
fm #{FM::VERSION}

usage: fm <command> [args]

Available fm commands:
    index       Create or update the index on the folder.
EOS
end


if ARGV.size == 0
    $stderr << usage
    exit
end

cmd = ARGV.shift
case cmd
when "index"
    FM.cmd_index(ARGV.clone)
when "update"
when "init"
when "config"
when "storage"
when "status"
when "log"
when "version"
when "help"
when "rm"
when "trash"
when "clean"
when "recover"
when "grep"
when "locate"
when "diff"
when "search"
when "tag"
when "active"
else
    $stderr << "fm: '#{cmd}' is not a fm command.\n"
    exit
end
